<Window x:Class="ContactBook.EditContactWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ContactBook"
        mc:Ignorable="d"
        Title="Edit Contact" Height="178.39" Width="415.89" ResizeMode="NoResize" WindowStartupLocation="CenterScreen">
    <Grid>
        <Label Content="Name:" HorizontalAlignment="Left" Margin="10,10,0,0" VerticalAlignment="Top" FontSize="22"/>
        <Label Content="Phone:" HorizontalAlignment="Left" Margin="10,54,0,0" VerticalAlignment="Top" FontSize="22"/>
        <TextBox x:Name="nameTextBox" HorizontalAlignment="Left" Height="29" Margin="88,18,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="296" FontSize="18"/>
        <TextBox x:Name="phoneTextBox" HorizontalAlignment="Left" Height="29" Margin="88,62,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="296" FontSize="18"/>
        <Button x:Name="addButton" Content="Add" HorizontalAlignment="Left" Margin="309,107,0,0" VerticalAlignment="Top" Width="75" Click="addButton_Click"/>
        <Button x:Name="cancelButton" Content="Cancel" HorizontalAlignment="Left" Margin="229,107,0,0" VerticalAlignment="Top" Width="75" Click="cancelButton_Click"/>
    </Grid>
</Window>
